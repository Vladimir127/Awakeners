<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/blue_round"
    android:padding="20dp">

    <TextView
        android:id="@+id/TextView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Уважаемый пользователь!\n Для корректной работы данного раздела, пожалуйста, предоставьте следующие разрешения, нажав на кнопку ниже:"
        android:textColor="#fff"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/TextView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextView1"
        android:layout_marginTop="10dp"
        android:text="1. Экран блокировки\n2. Отображать всплывающие окна, когда запущено в фоновом режиме\n3. Всплывающие окна"

        android:textColor="#fff"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/YesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/violet_gradient_round"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:text="@string/allow"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/NoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/YesTextView"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/cancel"
        android:textColor="#fff" />

</RelativeLayout>